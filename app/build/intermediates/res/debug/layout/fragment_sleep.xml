<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp" >

    <LinearLayout
        android:id="@+id/sleep_lay_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sleep_age_str" />

        <TextView
            android:id="@+id/sleep_tv_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sleep_lay_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sleep_lay_age"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sleep_sleep_str" />

        <TextView
            android:id="@+id/sleep_tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0" />
    </LinearLayout>
    
    <TextView 
        android:id="@+id/sleep_tv_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sleep_sleep_notice_str"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"/>

</RelativeLayout><!-- From: file:/G:/GitHub/Android_manager/app/src/main/res/layout/fragment_sleep.xml -->