<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    style="@style/ActivityMarginStyle">

    <LinearLayout
        android:id="@+id/fragment_body_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:text="æ‹†"
            android:textSize="100dp"
            android:gravity="center"/>
    </LinearLayout>
    <ScrollView
        android:layout_below="@id/fragment_body_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/body_building_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                style="@style/MetroLayoutStyle">

                <mmrx.com.metrolayout.MetroView
                    android:id="@+id/body_metor_1_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    />
                <mmrx.com.metrolayout.MetroView
                    android:id="@+id/body_metor_1_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <LinearLayout
                style="@style/MetroLayoutStyle">

                <mmrx.com.metrolayout.MetroView
                    android:id="@+id/body_metor_2_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    />
                <mmrx.com.metrolayout.MetroView
                    android:id="@+id/body_metor_2_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    />
                <mmrx.com.metrolayout.MetroView
                    android:id="@+id/body_metor_2_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                style="@style/MetroLayoutStyle">

                <mmrx.com.metrolayout.MetroView
                    android:id="@+id/body_metor_3_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:visibility="gone"
                    />
                <mmrx.com.metrolayout.MetroView
                    android:id="@+id/body_metor_3_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>